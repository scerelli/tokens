{
  "source": ["src/**/*.json"],
  "platforms": {
    "web": {
      "buildPath": "dist/web/",
      "transformGroup": "custom-web",
      "files": [
        {
          "format": "css/variables",
          "destination": "tokens.css"
        },
        {
          "format": "json/nested",
          "destination": "tokens.json"
        }
      ],
      "options": {
        "showFileHeader": true
      }
    }
  }
}
